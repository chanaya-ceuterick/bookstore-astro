---
const API_URL = "http://localhost:1337/api/books";

// Fetch the data from the API
const response = await fetch(API_URL);
const data = await response.json();
const books = data.data; // Hier staat de array met boekinformatie

// Base URL for images
const IMAGE_BASE_URL = "http://localhost:1337/uploads";
---

<div class="card-container">
  {books.map((book) => (
    <div class="card">
      <div class="card-image">
        <img
          src={`${IMAGE_BASE_URL}/${book.slug}.jpg`}
          alt={book.title || "No title"}
        />
      </div>

      <div class="card-content">
        <div class="text">
          <h3>{book.title || "No title"}</h3>
          {/* <p>{book.description || "No description available"}</p> */}
        </div>
        <button class="read-more">Read More</button>
      </div>
    </div>
  ))}
</div>

<style>
 .card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .card {
    display: flex;
    flex-direction: column;
    width: 240px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #f0f0f0;
  }

  .card-image {
    background-color: #d3d3d3;
    height: 160px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .card-image img {
    max-height: 100%;
    width: auto;
  }

  .card-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    background-color: #fff;
  }

  .card-content .text h3 {
    margin: 0;
    font-size: 14px;
    font-weight: 600;
    color: #000;
  }

  .card-content .text p {
    margin: 4px 0 0;
    font-size: 12px;
    color: #777;
  }
</style>
